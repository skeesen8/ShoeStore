{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"
        },
        "buildCommand": "npm install && npm run build",
        "startCommand": "npm start"
      },
      {
        "src": "backend/main.py",
        "use": "@vercel/python",
        "devCommand": "uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ]
}